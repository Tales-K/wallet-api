# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java files
[*.java]
indent_style = tab
indent_size = 4
max_line_length = 120

# XML files (Maven, Spring configs)
[*.{xml,xsd}]
indent_style = space
indent_size = 2
max_line_length = 120

# YAML files (Spring configurations)
[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 120

# Properties files
[*.properties]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Batch files
[*.{bat,cmd}]
end_of_line = crlf
